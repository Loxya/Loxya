{%- if showLogo and company.logo is not empty ~%}
<div style="width: 100px;">
    <div style="max-width: 100px;">
        <img src="{{ company.logo }}" style="width: 100%" />
    </div>
</div>
{%- endif ~%}
<div class="spaceBottom2 size12 strong">
    {%- if company.name is not empty ~%}
    {{ company.name }}<br />
    {%- endif -%}
    {%- if company.street is not empty ~%}
    {{ company.street }}<br />
    {%- endif ~%}
    {%- if company.zipCode is not empty or company.locality is not empty ~%}
    {{ company.zipCode }} {{ company.locality }}<br />
    {%- endif ~%}
    {%- if company.country.name is not empty ~%}
    {{ company.country.name }}
    {%- endif ~%}
</div>
{%- if showLegalNumbers ~%}
<div class="spaceBottom2">
{%- if company.code1_value is not empty and company.code1_label is not empty ~%}
    {{- company.code1_label }}: {{ company.code1_value }} {% if company.code2_value is not empty%}<br />{% endif %}
{%- endif ~%}
{%- if company.code2_value is not empty and company.code2_label is not empty ~%}
    {{- company.code2_label }}: {{ company.code2_value }}
{%- endif ~%}
</div>
{%- endif -%}
{%- if company.phone is not empty or company.email is not empty or company.website is not empty ~%}
<div class="spaceBottom2">
    {%- if company.phone is not empty ~%}
    {{ __('phone', company.phone) }}<br />
    {%- endif ~%}
    {%- if company.email is not empty ~%}
    {{ __('email', company.email) -}}<br />
    {%- endif ~%}
    {%- if company.website is not empty ~%}
    <a href="{{ company.website }}">{{ company.website }}</a>
    {%- endif ~%}
</div>
{%- endif -%}
{%- if showLegalNumbers and company.vat_number is not empty ~%}
<div class="spaceBottom2">{{ __('vat-number', company.vat_number) }}</div>
{%- endif -%}
